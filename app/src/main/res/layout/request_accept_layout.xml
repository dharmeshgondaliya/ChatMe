<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/user_requested_image"
            android:src="@drawable/ic_boy"
            app:civ_border_width="0.5dp"
            app:civ_border_color="#FF9800"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/user_requested_name"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/user_requested_accept"
                    android:text="Accept"
                    android:background="@drawable/request_button_1"
                    android:textStyle="italic"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/user_requested_cancel"
                    android:text="Cancel"
                    android:background="@drawable/request_button_1"
                    android:textStyle="italic"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFA7FF"
        android:layout_marginTop="7dp"/>

</LinearLayout>